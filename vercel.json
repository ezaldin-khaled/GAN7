{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api.gan7club.com/api/:path*"
    },
    {
      "source": "/media/:path*",
      "destination": "https://api.gan7club.com/media/:path*"
    }
  ],
  "redirects": [
    {
      "source": "/account",
      "destination": "/index.html",
      "permanent": false
    },
    {
      "source": "/login",
      "destination": "/index.html",
      "permanent": false
    },
    {
      "source": "/gallery",
      "destination": "/index.html",
      "permanent": false
    },
    {
      "source": "/admin",
      "destination": "/index.html",
      "permanent": false
    },
    {
      "source": "/register",
      "destination": "/index.html",
      "permanent": false
    },
    {
      "source": "/verify-email",
      "destination": "/index.html",
      "permanent": false
    },
    {
      "source": "/reset-password",
      "destination": "/index.html",
      "permanent": false
    },
    {
      "source": "/((?!api|media|_next|favicon.ico|assets).*)",
      "destination": "/index.html",
      "permanent": false
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-Requested-With"
        }
      ]
    },
    {
      "source": "/media/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000"
        }
      ]
    }
  ]
} 
 